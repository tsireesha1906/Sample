<p style="color: green"><%= notice %></p>

<h1>Countries</h1>

<div id="countries">
  <% @countries.each do |country| %>
    <%= render country %>
    <p>
      <%= link_to "Show this country", country %>
      <%= button_to "Destroy this country", country, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New country", new_country_path %>
